
<Account>
    size: root.size
    MDBoxLayout:
        id:prof
        size: root.width, root.height
        MDBoxLayout:
            id: container
            orientation: 'vertical'
            size_hint: .5, 1
            padding: [0, 10, 0, 550]
            spacing: 20
            Image:
                id: l
                source: 'test.png'
                size_hint: 1, .3

            MDRectangleFlatButton:
                id: reset
                text: 'Редактировать'
                font_size: 32
                size_hint: 0.85, 0.01
                pos_hint: {"center_x": .5}
                on_release: root.reset_prof()

            MDRectangleFlatButton:
                id: new_proj
                text: 'Создать проект +'
                font_size: 32
                size_hint: 0.85, 0.01
                pos_hint: {"center_x": .5}
                on_release: root.create_project()



        MDBoxLayout:
            size_hint: .5, 1
            orientation: 'vertical'
            padding: [20, 50, 0, 700]
            MDLabel:
                id: name
                size_hint: 1, .2
                text: 'Ф.И.О:\n    Мелехин Ярослав'
                font_size: 32
            MDLabel:
                id: st
                size_hint: 1, .2
                text: f'Статус:\n   ученик'
                font_size: 32