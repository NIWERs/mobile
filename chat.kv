<Chat>:
    orientation: 'vertical'
    MDCard:
        size_hint: 1, .1
        border_radius: 20
        radius: [15]
        MDBoxLayout:
            size_hint: 1, 1
            MDIconButton:
                icon: "arrow-left"
                id: cancel
                size_hint: .1 , 1
                on_release: root.cancel()
            MDTextButton:
                id: linker
                text: 'Название проекта(ссылка)'
                font_size: 20
                color: 'blue'
                size_hint: .9 , 1
                halign: 'center'
                on_release: root.open_project()
    MDScrollView:
        size: self.size
        MDGridLayout:
            id: chat_lay
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            cols: 2
            spacing: 100
            padding: [40, 100, 40, 0]
    MDBoxLayout:
        size_hint: 1, .14
        padding: [20, 0, 0, 20]
        MDTextField:
            id:mess
            size_hint: .55, .75
            mode: 'round'
        MDIconButton:
            id: send
            icon: "send"
            size_hint: .15, .7
            on_release: root.send()
<MD3Card>
    MDCard:
        id: card
        orientation: "vertical"
        md_bg_color: "#DCDCDC"
        size_hint: 1, None
        height: "50dp"
        border_radius: 20
        radius: [15]
        MDLabel:
            id: recs
            text: 'cccc'
            halign: 'center'
            valign : 'center'
            font_size: 18
